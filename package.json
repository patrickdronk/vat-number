    "jest": "^23.6.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "soap": "^0.25.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
