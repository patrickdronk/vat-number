{
  "name": "@adriantombu/vat-number",
  "version": "2.0.0",
  "description": "A tool to validate an european VAT number and get the related business data with the VIES API",
  "keywords": [
    "vat",
    "tva",
    "validation",
    "tax",
    "taxes",
    "business"
  ],
  "repository": "https://github.com/adriantombu/vat-number",
  "main": "lib/index.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "test": "jest --coverage",
    "clean": "rimraf ./coverage ./lib",
    "watch": "tsc -p . --watch",
    "watch:test": "jest --watchAll"
  },
  "author": "Adrian Tombu <adrian@otso.fr> (https://otso.fr)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/jest": "^24.0.18",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "soap": "^0.29.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
